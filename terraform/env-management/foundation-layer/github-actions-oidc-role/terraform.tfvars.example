# =============================================================================
# Example terraform.tfvars for GitHub Actions OIDC Role
# Copy this to terraform.tfvars and update with your values
# =============================================================================

aws_region = "ap-southeast-2"

# GitHub repository details
# The role trust policy will allow this repo to assume the role
github_org  = "dr3dr3"
github_repo = "terraform"

# Session duration for assumed role (in seconds)
# Default: 3600 (1 hour), Max: 43200 (12 hours)
session_duration = 3600

# Owner tag for resources
owner = "Andre Dreyer"
