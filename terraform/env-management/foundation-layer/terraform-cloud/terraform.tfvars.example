# Terraform Cloud Organization
tfc_organization = "Datafaced"

# Uses 1Password CLI injection - the secret reference will be replaced with the actual value
tfe_token = "op://terraform/tfe_token/notes"

# Uses 1Password CLI injection - the secret reference will be replaced with the actual value
github_oauth_token_id = "op://terraform/github_oauth_token_id/notes"


# GitHub Repository
github_repository_identifier = "dr3dr3/terraform"

# VCS Branch
vcs_branch = "main"

# Tags
owner       = "platform-team"
environment = "management"
managed_by  = "terraform"
layer       = "foundation"

# Auto-Apply Settings
auto_apply_dev        = true   # Auto-apply changes in dev environment
auto_apply_sandbox    = true   # Auto-apply changes in sandbox environment
auto_apply_management = false  # Manual approval required for management account
